package com.app.service;

import java.util.List;

import com.app.dto.StudentProfileDTO;
import com.app.entity.Student;

public interface StudentService {
	
	 Student admitStudent(Student student);
	 List<Student> getStudentsByName(String name);
	 List<Student> getStudentsByCourse(Long courseId);
	 Student updateStudentProfile(Long studentId, StudentProfileDTO studentDTO);
	 void leaveCourse(Long studentId, Long courseId);

}
